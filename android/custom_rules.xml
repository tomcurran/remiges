<?xml version="1.0" encoding="UTF-8"?>
<project>

    <!-- once test jar is available install on device -->
    <target name="-post-jar">
        <antcall target="install" />
    </target>

    <!-- at the end of the build run the tests -->
    <!--
    <target name="build" depends="-jar, -post-jar">
        <antcall target="test" />
    </target>
    -->

    <target name="test" description="Runs tests">
        <exec executable="${adb}" failonerror="true">
            <arg line="${adb.device.arg}" />
            <arg value="shell" />
            <arg value="uiautomator" />
            <arg value="runtest" />
            <arg value="${out.filename}" />
        </exec>
    </target>

</project>

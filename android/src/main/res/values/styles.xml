<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="ListItemJump">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ListItemJumpText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ListItemJumpText.Number">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ListItemJumpText.Date">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ListItemJumpText.Description">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/list_item_jump_number</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Jump">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/bg_card</item>
    </style>

    <style name="JumpText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="JumpText.Number">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="JumpText.Date">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="JumpText.Description">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/jump_number</item>
    </style>

    <style name="EditJumpContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="EditJump">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditJump.Number">
        <item name="android:hint">@string/hint_edit_jump_number</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:ems">10</item>
    </style>

    <style name="EditJump.Date" parent="@android:style/Widget.DeviceDefault.Light.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:hint">@string/tools_text_jump_detail_date</item>
        <item name="android:layout_below">@+id/edit_jump_number</item>
        <item name="android:layout_alignLeft">@+id/edit_jump_number</item>
        <item name="android:layout_alignStart">@+id/edit_jump_number</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="EditJump.Description">
        <item name="android:hint">@string/hint_edit_jump_description</item>
        <item name="android:layout_below">@+id/edit_jump_date</item>
        <item name="android:layout_alignLeft">@+id/edit_jump_date</item>
        <item name="android:layout_alignStart">@+id/edit_jump_date</item>
        <item name="android:ems">10</item>
    </style>

</resources>

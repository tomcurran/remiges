<resources>

    <style name="RemigesTheme" parent="@android:style/Theme.DeviceDefault.Light">
    </style>

    <!-- Navigation Drawer -->

    <style name="NavigationDrawer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:background">@color/navigation_drawer</item>
    </style>

    <style name="NavigationDrawerNavigate">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <style name="NavigationDrawerNavigateText" parent="android:TextAppearance.Medium">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="NavigationDrawerNavigateIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NavigationDrawerSeparator">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/navigation_drawer_separator</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NavigationDrawerExtra">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="NavigationDrawerExtraText" parent="android:TextAppearance.Small">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="NavigationDrawerExtraIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Card -->

    <style name="Card">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="CardDetail">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/margin_medium</item>
    </style>

    <style name="CardTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/card_title</item>
    </style>

    <style name="CardHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="CardDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/card_divider</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CardItem">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CardItemLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardItemContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="CardTable">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CardTableLabel">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textColor">@color/card_table_label</item>
    </style>

    <style name="CardTableContent">
        <item name="android:textColor">@color/card_table_content</item>
    </style>

    <!-- Jump List -->

    <style name="ListItemJumpContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ListItemJump">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ListItemJump.Number">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ListItemJump.Date">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ListItemJump.Way">
        <item name="android:layout_below">@id/list_item_jump_number</item>
    </style>

    <style name="ListItemJump.Type">
        <item name="android:layout_toRightOf">@id/list_item_jump_way</item>
        <item name="android:layout_below">@id/list_item_jump_number</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="ListItemJump.Description">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/list_item_jump_way</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


    <!-- Jump Detail -->

    <style name="JumpDetail">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="JumpDetail.Date">
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="JumpDetail.PlaceName">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="JumpDetailDescriptionLayout" parent="CardItem">
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Jump Edit -->

    <style name="EditJumpContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="EditJump">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditJump.Number">
        <item name="android:hint">@string/hint_edit_jump_number</item>
        <item name="android:layout_below">@id/label_edit_jump_number</item>
    </style>

    <style name="EditJump.Date" parent="@android:style/Widget.DeviceDefault.Light.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:hint">@string/tools_text_jump_detail_date</item>
        <item name="android:layout_below">@id/label_edit_jump_date</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="EditJump.Place">
        <item name="android:layout_below">@id/label_edit_jump_place</item>
    </style>

    <style name="EditJump.Way">
        <item name="android:hint">@string/hint_edit_jump_way</item>
        <item name="android:layout_below">@id/label_edit_jump_way</item>
    </style>

    <style name="EditJump.Type">
        <item name="android:layout_below">@id/label_edit_jump_type</item>
    </style>

    <style name="EditJump.ExitAltitude">
        <item name="android:hint">@string/hint_edit_jump_exit_altitude</item>
        <item name="android:layout_below">@id/label_edit_jump_exit_altitude</item>
    </style>

    <style name="EditJump.DeploymentAltitude">
        <item name="android:hint">@string/hint_edit_jump_deployment_altitude</item>
        <item name="android:layout_below">@id/label_edit_deployment_altitude</item>
    </style>

    <style name="EditJump.Delay">
        <item name="android:hint">@string/hint_edit_jump_delay</item>
        <item name="android:layout_below">@id/label_edit_jump_delay</item>
    </style>

    <style name="EditJump.Description">
        <item name="android:hint">@string/hint_edit_jump_description</item>
        <item name="android:layout_below">@id/label_edit_jump_description</item>
    </style>

    <style name="EditJumpAdd" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/edit_add_label</item>
    </style>

    <style name="EditJumpAdd.Type">
        <item name="android:layout_below">@id/edit_jump_type</item>
    </style>

    <style name="EditJumpAdd.Place">
        <item name="android:layout_below">@id/edit_jump_place</item>
    </style>

    <style name="EditJumpLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/edit_label</item>
    </style>

    <style name="EditJumpLabel.Number">
    </style>

    <style name="EditJumpLabel.Date">
        <item name="android:layout_below">@id/edit_jump_number</item>
    </style>

    <style name="EditJumpLabel.Description">
        <item name="android:layout_below">@id/edit_jump_delay</item>
    </style>

    <style name="EditJumpLabel.Place">
        <item name="android:layout_below">@id/edit_jump_date</item>
    </style>

    <style name="EditJumpLabel.Way">
        <item name="android:layout_below">@id/edit_jump_add_place</item>
    </style>

    <style name="EditJumpLabel.Type">
        <item name="android:layout_below">@id/edit_jump_way</item>
    </style>

    <style name="EditJumpLabel.ExitAltitude">
        <item name="android:layout_below">@id/edit_jump_add_type</item>
    </style>

    <style name="EditJumpLabel.DeploymentAltitude">
        <item name="android:layout_below">@id/edit_jump_exit_altitude</item>
    </style>

    <style name="EditJumpLabel.Delay">
        <item name="android:layout_below">@id/edit_jump_deployment_altitude</item>
    </style>

    <!-- Place Detail -->

    <style name="PlaceDetailStaticMap">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Jump Type Edit -->

    <style name="EditJumpTypeContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="EditJumpType">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditJumpType.Name">
        <item name="android:hint">@string/hint_edit_jumptype_name</item>
        <item name="android:layout_below">@id/label_edit_jumptype_name</item>
    </style>

    <style name="EditJumpTypeLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/edit_label</item>
    </style>

    <style name="EditJumpTypeLabel.Name">
    </style>

    <!-- Place Edit -->

    <style name="EditPlaceContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="EditPlace">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditPlace.Name">
        <item name="android:hint">@string/hint_edit_place_name</item>
        <item name="android:layout_below">@id/label_edit_place_name</item>
    </style>

    <style name="EditPlace.Latitude">
        <item name="android:hint">@string/hint_edit_place_latitude</item>
        <item name="android:layout_below">@id/label_edit_place_latitude</item>
    </style>

    <style name="EditPlace.Longitude">
        <item name="android:hint">@string/hint_edit_place_longitude</item>
        <item name="android:layout_below">@id/label_edit_place_longitude</item>
    </style>

    <style name="EditPlaceLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/edit_label</item>
    </style>

    <style name="EditPlaceLabel.Name">
    </style>

    <style name="EditPlaceLabel.Latitude">
        <item name="android:layout_below">@id/edit_place_name</item>
    </style>

    <style name="EditPlaceLabel.Longitude">
        <item name="android:layout_below">@id/edit_place_latitude</item>
    </style>

</resources>

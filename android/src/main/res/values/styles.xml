<resources>

    <style name="RemigesTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="RemigesTheme.EditItem">
        <item name="android:actionButtonStyle">@style/EditItemActionButtonStyle</item>
    </style>

    <style name="EditItemActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">@dimen/minimum_width_edit_action_button</item>
        <item name="android:textSize">@dimen/text_size_edit_action_button</item>
    </style>

    <style name="Widget.Remiges.Spinner.Underlined" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Detail -->

    <style name="DetailContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
    </style>

    <style name="DetailTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
        <item name="android:textColor">@color/detail_title</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="DetailHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
        <item name="android:textColor">@color/detail_heading</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="DetailDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/detail_divider</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">@dimen/keyline_1</item>
        <item name="android:layout_marginRight">@dimen/keyline_1</item>
    </style>

    <style name="DetailItem">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
    </style>

    <style name="DetailItemLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailItemContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DetailTable">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DetailTableLabel">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textColor">@color/detail_table_label</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="DetailTableContent">
        <item name="android:textColor">@color/detail_table_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <!-- Floating Action Button -->

    <style name="FloatingActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="fab_type">normal</item>
        <item name="fab_colorNormal">@color/accent</item>
        <item name="fab_colorPressed">@color/accent_dark</item>
        <item name="fab_colorRipple">@color/accent_dark</item>
    </style>

    <!-- Edit -->

    <style name="EditContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
    </style>

    <style name="EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">-4dp</item>
    </style>

    <style name="EditSpinner" parent="Widget.Remiges.Spinner.Underlined">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">-8dp</item>
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:layout_marginTop">-8dp</item>
        <item name="android:textColor">@color/edit_add_label</item>
    </style>

    <style name="EditLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">@color/edit_label</item>
        <item name="floatLabelSidePadding">4dp</item>
        <item name="floatLabelTextAppearance">@style/EditLabelFloatTextAppearance</item>
    </style>

    <style name="EditLabelFloatTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/edit_label_text_selector</item>
    </style>

    <style name="EditLabel.Spinner">
        <item name="android:paddingLeft">4dp</item>
    </style>



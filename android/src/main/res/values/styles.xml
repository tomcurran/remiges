<resources>

    <style name="RemigesTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="RemigesTheme.EditItem">
        <item name="android:actionButtonStyle">@style/EditItemActionButtonStyle</item>
    </style>

    <style name="EditItemActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">@dimen/minimum_width_edit_action_button</item>
        <item name="android:textSize">@dimen/text_size_edit_action_button</item>
    </style>

    <!-- Detail -->

    <style name="DetailContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
    </style>

    <style name="DetailTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/detail_title</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="DetailHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
        <item name="android:textColor">@color/detail_heading</item>
    </style>

    <style name="DetailDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/detail_divider</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">@dimen/keyline_1</item>
        <item name="android:layout_marginRight">@dimen/keyline_1</item>
    </style>

    <style name="DetailItem">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
    </style>

    <style name="DetailItemLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailItemContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DetailTable">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DetailTableLabel">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textColor">@color/detail_table_label</item>
    </style>

    <style name="DetailTableContent">
        <item name="android:textColor">@color/detail_table_content</item>
    </style>

    <!-- Floating Action Button -->

    <style name="FloatingActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="fab_type">normal</item>
        <item name="fab_colorNormal">@color/accent</item>
        <item name="fab_colorPressed">@color/accent_dark</item>
        <item name="fab_colorRipple">@color/accent_dark</item>
    </style>

    <!-- Jump Edit -->

    <style name="EditJumpContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
    </style>

    <style name="EditJump">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditJump.Number">
        <item name="android:layout_below">@id/label_edit_jump_number</item>
    </style>

    <style name="EditJump.Date" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_below">@id/label_edit_jump_date</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="EditJump.Place">
        <item name="android:layout_below">@id/label_edit_jump_place</item>
        <item name="android:layout_marginLeft">-4dp</item>
    </style>

    <style name="EditJump.Way">
        <item name="android:layout_below">@id/label_edit_jump_way</item>
    </style>

    <style name="EditJump.Type">
        <item name="android:layout_below">@id/label_edit_jump_type</item>
        <item name="android:layout_marginLeft">-4dp</item>
    </style>

    <style name="EditJump.ExitAltitude">
        <item name="android:layout_below">@id/label_edit_jump_exit_altitude</item>
    </style>

    <style name="EditJump.DeploymentAltitude">
        <item name="android:layout_below">@id/label_edit_deployment_altitude</item>
    </style>

    <style name="EditJump.Delay">
        <item name="android:layout_below">@id/label_edit_jump_delay</item>
    </style>

    <style name="EditJump.Description">
        <item name="android:layout_below">@id/label_edit_jump_description</item>
    </style>

    <style name="EditJumpAdd" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@color/edit_add_label</item>
    </style>

    <style name="EditJumpAdd.Type">
        <item name="android:layout_below">@id/edit_jump_type</item>
    </style>

    <style name="EditJumpAdd.Place">
        <item name="android:layout_below">@id/edit_jump_place</item>
    </style>

    <style name="EditJumpLabelText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/edit_label_text_selector</item>
    </style>

    <style name="EditJumpLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/edit_label</item>
        <item name="floatLabelSidePadding">4dp</item>
        <item name="floatLabelTextAppearance">@style/EditJumpLabelText</item>
    </style>

    <style name="EditJumpLabel.Number">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="EditJumpLabel.Date">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="EditJumpLabel.Description">
    </style>

    <style name="EditJumpLabel.Place">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="EditJumpLabel.Way">
    </style>

    <style name="EditJumpLabel.Type">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="EditJumpLabel.ExitAltitude">
    </style>

    <style name="EditJumpLabel.DeploymentAltitude">
    </style>

    <style name="EditJumpLabel.Delay">
    </style>


    <!-- Jump Type Edit -->

    <style name="EditJumpTypeContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
    </style>

    <style name="EditJumpType">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditJumpType.Name">
    </style>

    <style name="EditJumpTypeLabelText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/edit_label_text_selector</item>
    </style>

    <style name="EditJumpTypeLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/edit_label</item>
        <item name="floatLabelSidePadding">4dp</item>
        <item name="floatLabelTextAppearance">@style/EditJumpTypeLabelText</item>
    </style>

    <style name="EditJumpTypeLabel.Name">
        <item name="android:layout_marginTop">0dp</item>
    </style>


    <!-- Place Edit -->

    <style name="EditPlaceContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
    </style>

    <style name="EditPlace">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditPlace.Name">
    </style>

    <style name="EditPlace.Latitude">
    </style>

    <style name="EditPlace.Longitude">
    </style>

    <style name="EditPlaceLabelText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/edit_label_text_selector</item>
    </style>

    <style name="EditPlaceLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/edit_label</item>
        <item name="floatLabelSidePadding">4dp</item>
        <item name="floatLabelTextAppearance">@style/EditPlaceLabelText</item>
    </style>

    <style name="EditPlaceLabel.Name">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="EditPlaceLabel.Latitude">
        <item name="android:layout_below">@id/label_edit_place_name</item>
    </style>

    <style name="EditPlaceLabel.Longitude">
        <item name="android:layout_below">@id/label_edit_place_latitude</item>
    </style>

</resources>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="ListItemJump">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ListItemJumpText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ListItemJumpText.Number">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ListItemJumpText.Date">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ListItemJumpText.Description">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/list_item_jump_number</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="card">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/bg_card</item>
    </style>

    <style name="JumpContainer" parent="card">
    </style>

    <style name="JumpText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="JumpText.Number">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="JumpText.Date">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="JumpText.Description">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/jump_number</item>
    </style>

    <style name="JumpProfileContainer" parent="card">
    </style>

    <style name="JumpProfileTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="JumpProfileLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="JumpProfileLabel.ExitAltitude">
        <item name="android:layout_below">@id/jump_profile_title</item>
    </style>

    <style name="JumpProfileLabel.DeploymentAltitude">
        <item name="android:layout_below">@id/label_jump_exit_altitude</item>
    </style>

    <style name="JumpProfileLabel.Delay">
        <item name="android:layout_below">@id/label_jump_deployment_altitude</item>
    </style>

    <style name="JumpProfile">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="JumpProfile.ExitAltitude">
        <item name="android:layout_below">@id/jump_profile_title</item>
        <item name="android:layout_toRightOf">@id/label_jump_exit_altitude</item>
    </style>

    <style name="JumpProfile.DeploymentAltitude">
        <item name="android:layout_below">@id/label_jump_exit_altitude</item>
        <item name="android:layout_toRightOf">@id/label_jump_deployment_altitude</item>
    </style>

    <style name="JumpProfile.Delay">
        <item name="android:layout_below">@id/label_jump_deployment_altitude</item>
        <item name="android:layout_toRightOf">@id/label_jump_delay</item>
    </style>


    <!-- fragment_jump_edit -->

    <style name="EditJumpContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="EditJump">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditJump.Number">
        <item name="android:hint">@string/hint_edit_jump_number</item>
        <item name="android:layout_below">@id/label_edit_jump_number</item>
    </style>

    <style name="EditJump.Date" parent="@android:style/Widget.DeviceDefault.Light.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:hint">@string/tools_text_jump_detail_date</item>
        <item name="android:layout_below">@id/label_edit_jump_date</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="EditJump.Description">
        <item name="android:hint">@string/hint_edit_jump_description</item>
        <item name="android:layout_below">@id/label_edit_jump_description</item>
    </style>

    <style name="EditJump.ExitAltitude">
        <item name="android:hint">@string/hint_edit_jump_exit_altitude</item>
        <item name="android:layout_below">@id/label_edit_jump_exit_altitude</item>
    </style>

    <style name="EditJump.DeploymentAltitude">
        <item name="android:hint">@string/hint_edit_jump_deployment_altitude</item>
        <item name="android:layout_below">@id/label_edit_deployment_altitude</item>
    </style>

    <style name="EditJump.Delay">
        <item name="android:hint">@string/hint_edit_jump_delay</item>
        <item name="android:layout_below">@id/label_edit_jump_delay</item>
    </style>

    <style name="EditJumpLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#a9a9a9</item>
    </style>

    <style name="EditJumpLabel.Number">
    </style>

    <style name="EditJumpLabel.Date">
        <item name="android:layout_below">@id/edit_jump_number</item>
    </style>

    <style name="EditJumpLabel.Description">
        <item name="android:layout_below">@id/edit_jump_delay</item>
    </style>

    <style name="EditJumpLabel.ExitAltitude">
        <item name="android:layout_below">@id/edit_jump_date</item>
    </style>

    <style name="EditJumpLabel.DeploymentAltitude">
        <item name="android:layout_below">@id/edit_jump_exit_altitude</item>
    </style>

    <style name="EditJumpLabel.Delay">
        <item name="android:layout_below">@id/edit_jump_deployment_altitude</item>
    </style>

</resources>

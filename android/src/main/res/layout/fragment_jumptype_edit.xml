<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.JumpTypeEditFragment">

    <LinearLayout
        style="@style/EditContainer">

        <org.tomcurran.remiges.ui.widget.FloatLabelLayout
            android:id="@+id/label_edit_jumptype_name"
            android:text="@string/label_edit_jumptype_name"
            style="@style/EditLabel.Top">

            <EditText
                android:id="@+id/edit_jumptype_name"
                android:inputType="text"
                android:hint="@string/hint_edit_jumptype_name"
                style="@style/EditText" />

        </org.tomcurran.remiges.ui.widget.FloatLabelLayout>

    </LinearLayout>

</ScrollView>

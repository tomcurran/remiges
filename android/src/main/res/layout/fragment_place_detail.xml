<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PlaceDetailFragment">

    <android.support.v7.widget.CardView
        style="@style/Card">

        <LinearLayout
            style="@style/CardDetail">

            <FrameLayout
                android:id="@+id/detail_place_map_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fragment
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:id="@+id/detail_place_map"
                    android:layout_height="150dp"
                    android:layout_width="match_parent"
                    map:mapType="normal"
                    map:liteMode="false"
                    map:cameraZoom="7"
                    map:uiCompass="false"
                    map:uiRotateGestures="false"
                    map:uiScrollGestures="false"
                    map:uiTiltGestures="false"
                    map:uiZoomControls="false"
                    map:uiZoomGestures="false" />

            </FrameLayout>

            <LinearLayout
                style="@style/PlaceDetailStats">

                <TextView
                    android:id="@+id/detail_place_stats_header"
                    android:text="@string/detail_place_stats_header"
                    style="@style/CardHeading"/>

                <View
                    style="@style/CardDivider" />

                <TableLayout
                    style="@style/CardTable">

                    <TableRow>
                        <TextView
                            android:text="@string/label_detail_place_jump_count"
                            style="@style/CardTableLabel" />
                        <TextView
                            android:id="@+id/detail_place_jump_count"
                            style="@style/CardTableContent"
                            tools:text="@string/tools_text_place_jump_count" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="@string/label_detail_place_jump_last"
                            style="@style/CardTableLabel" />
                        <TextView
                            android:id="@+id/detail_place_jump_last"
                            style="@style/CardTableContent"
                            tools:text="@string/tools_text_place_jump_last" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</ScrollView>
